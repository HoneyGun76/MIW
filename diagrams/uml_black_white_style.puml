@startuml
!define BLACK_WHITE_STYLE

' ===== STRICT BLACK & WHITE STYLE CONFIGURATION =====
' Based on UML 2.5 standard design as referenced from uml-diagrams.org
' This style provides professional, print-friendly, monochrome appearance

' Remove all colors, shadows, and gradients for strict professional look
skinparam backgroundColor White
skinparam shadowing false
skinparam handwritten false
skinparam monochrome true
skinparam defaultFontSize 10
skinparam defaultFontName Arial
skinparam DefaultTextAlignment center
skinparam wrapWidth 200
skinparam maxMessageSize 60

' ===== SEQUENCE DIAGRAM STRICT STYLING =====
skinparam sequence {
    ' Actor styling - strict black and white
    ActorBackgroundColor White
    ActorBorderColor Black
    ActorBorderThickness 2
    ActorFontColor Black
    ActorFontSize 10
    ActorFontStyle bold
    
    ' Participant styling - minimal design
    ParticipantBackgroundColor White
    ParticipantBorderColor Black
    ParticipantBorderThickness 1
    ParticipantFontColor Black
    ParticipantFontSize 10
    ParticipantFontStyle normal
    ParticipantPadding 10
    
    ' Arrow styling - clean black lines
    ArrowColor Black
    ArrowThickness 1
    ArrowFontColor Black
    ArrowFontSize 9
    ArrowFontStyle normal
    
    ' Lifeline styling - simple black lines
    LifeLineBackgroundColor White
    LifeLineBorderColor Black
    LifeLineBorderThickness 1
    
    ' Activation box styling - minimal white boxes
    BoxBackgroundColor White
    BoxBorderColor Black
    BoxBorderThickness 1
    BoxFontColor Black
    BoxFontSize 9
    
    ' Message styling
    MessageAlignment left
    MessageTextAlignment left
    
    ' Divider styling
    DividerBackgroundColor White
    DividerBorderColor Black
    DividerBorderThickness 1
    DividerFontColor Black
    DividerFontSize 10
    DividerFontStyle bold
    
    ' Reference styling
    ReferenceBackgroundColor White
    ReferenceBorderColor Black
    ReferenceBorderThickness 1
    ReferenceFontColor Black
    ReferenceFontSize 9
    
    ' Stereotype styling
    StereotypeFontColor Black
    StereotypeFontSize 8
}

